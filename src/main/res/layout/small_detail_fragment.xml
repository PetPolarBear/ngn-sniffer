<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/drawer_height"
    android:background="@color/background_material_dark"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/drawer_height"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="-10dp"
            android:drawableStart="@drawable/signal"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/signal"
            android:textAppearance="@android:style/TextAppearance.Small.Inverse" />

        <TextView
            android:id="@+id/small_detail_fragment_signal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp"
            android:gravity="center"
            android:text="-123 dBm"
            android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/small_detail_fragment_signal_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="EDGE"
            android:textAppearance="@android:style/TextAppearance.Small.Inverse"
            android:textSize="12sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/drawer_height"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="-10dp"
            android:drawableStart="@drawable/wifi"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/wifi"
            android:textAppearance="@android:style/TextAppearance.Small.Inverse" />

        <TextView
            android:id="@+id/small_detail_fragment_wifi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="0 AP's"
            android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/drawer_height"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/bluetooth"
            android:drawablePadding="-10dp"
            android:drawableStart="@drawable/bluetooth"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/bluetooth"
            android:textAppearance="@android:style/TextAppearance.Small.Inverse" />

        <TextView
            android:id="@+id/small_detail_fragment_bluetooth"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="0 Devices"
            android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/drawer_height"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-4dp"
            android:drawableLeft="@drawable/location"
            android:drawablePadding="-10dp"
            android:drawableStart="@drawable/location"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/location"
            android:textAppearance="@android:style/TextAppearance.Small.Inverse" />

        <TextView
            android:id="@+id/small_detail_fragment_location_lat"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="Lat 7.123123"
            android:textAppearance="@android:style/TextAppearance.Small.Inverse"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/small_detail_fragment_location_lng"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="Lng 7.123123"
            android:textAppearance="@android:style/TextAppearance.Small.Inverse"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>