<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@color/background_material_dark"
    android:layout_height="@dimen/drawer_height"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:textAppearance="@android:style/TextAppearance.Large.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/small_detail_fragment_signal_strength"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />
    <TextView
        android:textAppearance="@android:style/TextAppearance.Large.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/small_detail_fragment_wifi_aps"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"/>
</LinearLayout>